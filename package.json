{
  "name": "@siegrift/tsfunct",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Siegrift/tsfunct.git"
  },
  "author": "Siegrift <e.tesarr@gmail.com>",
  "license": "MIT",
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "files": [
    "out/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "build": "yarn tsc --target \"ES5\" --outDir \"out\" --declaration true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typedoc --out docs ./src --mode file  --exclude 'src/test/*' && cp -r ./assets/* docs/assets && git add docs/*",
      "pre-push": "yarn test"
    }
  },
  "description": "Tsfunct is a **T**ype**S**cript **funct**ional library made directly for TS with its static typesystem in mind.",
  "bugs": {
    "url": "https://github.com/Siegrift/tsfunct/issues"
  },
  "homepage": "https://github.com/Siegrift/tsfunct#readme",
  "directories": {
    "doc": "docs"
  }
}
